        }

    }
    return foods;

}

int Partitionprotein(vector<Food>& v, int start, int end) { //protein

    int pivot = end;
    int j = start;
    for (int i = start; i < end; ++i) {
        if (v[i].protein < v[pivot].protein) {
            swap(v[i], v[j]);
            ++j;
        }
    }
    swap(v[j], v[pivot]);
    return j;

}
int Partitionfiber(vector<Food>& v, int start, int end) { //protein

    int pivot = end;
    int j = start;
    for (int i = start; i < end; ++i) {
        if (v[i].fiber < v[pivot].fiber) {
            swap(v[i], v[j]);
            ++j;
        }
    }
    swap(v[j], v[pivot]);
    return j;

}


int Partitionfat(vector<Food>& v, int start, int end) { //fatPartition

    int pivot = end;
    int j = start;
    for (int i = start; i < end; ++i) {
        if (v[i].fat < v[pivot].fat) {
            swap(v[i], v[j]);
            ++j;
        }
    }
    swap(v[j], v[pivot]);
    return j;

}

int Partitionsurg(vector<Food>& v, int start, int end) { //sugar partition

    int pivot = end;
    int j = start;
    for (int i = start; i < end; ++i) {
        if (v[i].sugar < v[pivot].sugar) {
            swap(v[i], v[j]);
            ++j;
        }
    }
    swap(v[j], v[pivot]);
    return j;

}

int Partitioncarb(vector<Food>& v, int start, int end) { //protein partiton

    int pivot = end;
    int j = start;
    for (int i = start; i < end; ++i) {
        if (v[i].carb < v[pivot].carb) {
            swap(v[i], v[j]);
            ++j;
        }
    }
    swap(v[j], v[pivot]);
    return j;

}

void Quicksortcarb(vector<Food>& v, int start, int end) { //quicksort for carb

    if (start < end) {
        int p = Partitioncarb(v, start, end);
        Quicksortcarb(v, start, p - 1);
        Quicksortcarb(v, p + 1, end);
    }

}
void Quicksortfiber(vector<Food>& v, int start, int end) { //quicksort for fiber

    if (start < end) {
        int p = Partitionfiber(v, start, end);
        Quicksortfiber(v, start, p - 1);
        Quicksortfiber(v, p + 1, end);
    }

}
void Quicksortfat(vector<Food>& v, int start, int end) { //quicksort for fat

    if (start < end) {
        int p = Partitionfat(v, start, end);
        Quicksortfat(v, start, p - 1);
        Quicksortfat(v, p + 1, end);
    }

}
void Quicksortsug(vector<Food>& v, int start, int end) { //quicksort for sugar

    if (start < end) {
        int p = Partitionsurg(v, start, end);
        Quicksortsug(v, start, p - 1);
        Quicksortsug(v, p + 1, end);
    }

}
void Quicksortpro(vector<Food>& v, int start, int end) { //quicksort for protein

    if (start < end) {
        int p = Partitionprotein(v, start, end);
        Quicksortpro(v, start, p - 1);
        Quicksortpro(v, p + 1, end);
    }

}


vector<Food> copyvector(vector<Food>& aa) { //used to make extra vect for quicksort
    vector<Food>hh;
    for (int i = 0; i < aa.size(); i++) {
        hh.push_back(aa[i]);
    }
    return hh;
}


vector<float> copyvectorCarb(vector<Food>& aa) { //used to store just carb vals
    vector<float>hh;
    for (int i = 0; i < aa.size(); i++) {
        hh.push_back(aa[i].carb);
    }
    return hh;
}

vector<float> copyvectorProtein(vector<Food>& aa) { //used to store just protein vals
    vector<float>hh;
    for (int i = 0; i < aa.size(); i++) {
        hh.push_back(aa[i].protein);
    }
    return hh;
}

vector<float> copyvectorFiber(vector<Food>& aa) { //
    vector<float>hh;
    for (int i = 0; i < aa.size(); i++) {
        hh.push_back(aa[i].fiber);
    }
    return hh;
}

vector<float> copyvectorSugar(vector<Food>& aa) { //used to store just sugar vals
    vector<float>hh;
    for (int i = 0; i < aa.size(); i++) {
        hh.push_back(aa[i].sugar);
    }
    return hh;
}

vector<float> copyvectorFat(vector<Food>& aa) { //used to store just fat vals
    vector<float>hh;
    for (int i = 0; i < aa.size(); i++) {
        hh.push_back(aa[i].fat);
    }
    return hh;
}










float getClosest(float val1, float val2, float target) //used in binary search to find closest val to target between two
{
    if (target - val1 >= val2 - target)
        return val2;
    else
        return val1;
}


int findClosest(vector<float> vect, int n, float target)
{
    float checker = 0; //used for swap return val
    // Corner cases
    //check if targ is less than least val
    if (target <= vect[0])
        return 0;
    //check if targ is greater than largest val
    if (target >= vect[n - 1])
        return n - 1;

    // binary search
    int i = 0, j = n, mid = 0;
    while (i < j) {
        mid = (i + j) / 2;

        if (vect[mid] == target)
            return mid;

        // if target is less search left
        if (target < vect[mid]) {

            // check if target > prev
            // to mid, return closest of two
            if (mid > 0 && target > vect[mid - 1]) {
                checker = getClosest(vect[mid - 1], vect[mid], target);
                if (checker == vect[mid - 1]) {
                    return mid - 1;
                }
                else {
                    return mid;
                }

            }

            j = mid;
        }

        // check if target is > mid
        else {
            if (mid < n - 1 && target < vect[mid + 1]) {
                checker = getClosest(vect[mid], vect[mid + 1], target);
                if (checker == vect[mid + 1]) {
                    return mid + 1;
                }
                else {
                    return mid;
                }
            }

            // increase i
            i = mid + 1;
        }
    }

    // return value closest to target
    return mid;
}







void printFood(vector<Food> vect, int i) { //prints all values for target foods
    cout << vect[i].description << endl;
    cout << endl;
    cout << "MacroNutrients" << endl;
    cout << "----------------------------------------" << endl;
    cout << vect[i].protein << " grams of protein" << endl;
    cout << vect[i].fat << " grams of fat" << endl;
    cout << vect[i].carb << " grams of carbohydrates" << endl;
    cout << vect[i].sugar << " grams of sugar" << endl;
    cout << vect[i].fiber << " grams of fiber" << endl;
    cout << endl;
    cout << "Other Nutrients" << endl;
    cout << "----------------------------------------" << endl;
    cout << vect[i].cholesterol << " grams of cholesterol" << endl;
    cout << vect[i].retinol << " grams of retinol" << endl;
    cout << vect[i].VitaminA << " grams of Vitamin A" << endl;
    cout << vect[i].caroteneAlpha << " grams of Carotene Alpha" << endl;
    cout << vect[i].caroteneBeta << " grams of Carotene Beta" << endl;
    cout << vect[i].cryptoxanthyn << " grams of cryptoxanthyn" << endl;
    cout << vect[i].lycopene << " grams of lycopene" << endl;
    cout << vect[i].luteinAndZeaxanthin << " grams of Lutein and Zeaxanthin" << endl;

}



Food loadClassNone(Food& food, stringstream& s)
{
    string temp;

    //Trash the first value and the opening quotation
    getline(s, temp, ',');

    //Get food description
    getline(s, temp, ',');
    food.description = temp;

    //Trash next line
    getline(s, temp, ',');

    //Get Carotene Alpha
    getline(s, temp, ',');
    food.caroteneAlpha = stof(temp);

    //Get Carotene Beta
    getline(s, temp, ',');
    food.caroteneBeta = stof(temp);

    //Get Cryptoxanthym
    getline(s, temp, ',');
    food.cryptoxanthyn = stof(temp);

    //Get Carbs
    getline(s, temp, ',');
    food.carb = stof(temp);

    //Get Cholesterol
    getline(s, temp, ',');
    food.cholesterol = stof(temp);

    //Trash next line
    getline(s, temp, ',');

    //Get Fiber
    getline(s, temp, ',');
    food.fiber = stof(temp);

    //Get Lutein and Zeaxaxanthin
    getline(s, temp, ',');
    food.luteinAndZeaxanthin = stof(temp);

    //Get Lycopene
    getline(s, temp, ',');
    food.lycopene = stof(temp);

    //Trash the next line
    getline(s, temp, ',');

    //Get protein
    getline(s, temp, ',');
    food.protein = stof(temp);

    //Get Retinol
    getline(s, temp, ',');
    food.retinol = stof(temp);

    //Trash next two lines
    getline(s, temp, ',');
    getline(s, temp, ',');

    //Get Sugar
    getline(s, temp, ',');
    food.sugar = stof(temp);

    //Trash next two lines
    getline(s, temp, ',');
    getline(s, temp, ',');

    //Get Fat
    getline(s, temp, ',');
    food.fat = stof(temp);

    //Trash next 11 lines
    getline(s, temp, ',');
    getline(s, temp, ',');
    getline(s, temp, ',');
    getline(s, temp, ',');
    getline(s, temp, ',');
    getline(s, temp, ',');
    getline(s, temp, ',');
    getline(s, temp, ',');
    getline(s, temp, ',');
    getline(s, temp, ',');
    getline(s, temp, ',');

    //Get Vitamin A
    getline(s, temp, ',');
    food.VitaminA = stof(temp);

    return food;
}

Food loadClassQuotations(Food& food, stringstream& s)
{
    string temp;

    //Trash the first value and the opening quotation
    getline(s, temp, ',');
    getline(s, temp, '\"');

    //Get food description
    getline(s, temp, '"');
    food.description = temp;

    //Trash next line
    getline(s, temp, ',');
    getline(s, temp, ',');

    //Get Carotene Alpha
    getline(s, temp, ',');
    food.caroteneAlpha = stof(temp);

    //Get Carotene Beta
